# SylionTech Assistant Backend - Production Environment Variables

# Application
NODE_ENV=production
PORT=8080
API_VERSION=1.0.0

# Google Cloud Platform
PROJECT_ID=sylion-tech-assistant
REGION=europe-west1
VERTEX_LOCATION=us-central1

# Vertex AI Configuration  
VERTEX_AI_MODEL=gemini-1.5-flash-002

# Security
HMAC_SECRET_NAME=syliontech-assistant-hmac-secret

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
ALLOWED_ORIGINS=chrome-extension://*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000