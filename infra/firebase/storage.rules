rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ===========================================
    // RÈGLES STORAGE SILYONTECH ASSISTANT
    // ===========================================
    
    // Documents RAG par tenant
    match /tenants/{tenantId}/documents/{allPaths=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.tenantId == tenantId;
      
      // Limitation taille fichier (50MB max)
      allow write: if request.resource.size < 50 * 1024 * 1024;
      
      // Types de fichiers autorisés
      allow write: if request.resource.contentType.matches(
        'application/pdf|text/.*|application/json|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document'
      );
    }
    
    // Assets widget par tenant (logos, themes)
    match /tenants/{tenantId}/assets/{allPaths=**} {
      allow read: if true; // Public pour widget
      allow write: if request.auth != null 
        && request.auth.token.tenantId == tenantId;
      
      // Images uniquement pour les assets
      allow write: if request.resource.contentType.matches('image/.*');
      
      // Limitation taille image (5MB max)
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
    
    // Exports et backups - Admin uniquement
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.role == 'admin';
    }
    
    // Logs et analytics
    match /logs/{tenantId}/{allPaths=**} {
      allow write: if request.auth != null 
        && request.auth.token.tenantId == tenantId;
      
      allow read: if request.auth != null 
        && (request.auth.token.role == 'admin' 
            || request.auth.token.tenantId == tenantId);
    }
    
    // Règle par défaut - Refuser l'accès
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}